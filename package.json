{
  "name": "savez-ssd-bbz",
  "description": "Next.js serverless PWA with Firebase and React Hooks, Firebase hosting",
  "version": "1.15.2",
  "author": "Ivan Doncevic <idoncev@gmail.com>",
  "license": "ISC",
  "scripts": {
    "dev:client": "next src/client",
    "dev:server": "babel src/server --out-dir dist/server --source-maps --watch",
    "dev": "yarn dev:client & yarn dev:server",
    "build:client": "next build src/client",
    "build:server": "babel src/server --out-dir dist/server --source-maps",
    "build": "yarn build:client && yarn build:server && yarn copy-deps && yarn install-deps",
    "not-preserve": "yarn build",
    "serve": "cross-env NODE_ENV=production firebase serve --only functions,hosting",
    "not-predeploy": "rimraf dist/ && yarn build",
    "deploy": "cross-env NODE_ENV=production firebase deploy --only functions,hosting",
    "test": "echo 'Running Standard.js and Jasmine unit tests...\n' && yarn lint && yarn unit",
    "fix": "standard --fix",
    "v+": "yarn version --patch",
    "v++": "yarn version --minor",
    "copy-deps": "cpx \"*{package.json,yarn.lock,next.config.js}\" \"dist/server\"",
    "install-deps": "cd \"dist/server\" && yarn",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" && cpx \"src/client/public/**/*.*\" \"dist/public\""
  },
  "dependencies": {
    "aether-css-framework": "^1.6.17",
    "firebase": "^9.6.8",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.1",
    "next": "^11.0.0",
    "next-offline": "^5.0.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-toastify": "^6.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-emotion": "^11.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-module-resolver": "1.4.0",
    "eslint-plugin-prefer-arrow-functions": "3.0.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-security-node": "1.0.14",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^5.25.0"
  },
  "main": "index.js",
  "engines": {
    "node": "16"
  }
}
