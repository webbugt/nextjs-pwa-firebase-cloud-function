{
  "name": "savez-ssd-bbz",
  "description": "Next.js serverless PWA with Firebase and React Hooks, Firebase hosting",
  "version": "1.15.3",
  "author": "Ivan Doncevic <idoncev@gmail.com>",
  "license": "ISC",
  "scripts": {
    "dev:client": "next src/client",
    "dev:server": "babel src/server --out-dir dist/server --source-maps --watch",
    "dev": "yarn dev:client & yarn dev:server",
    "build:client": "next build src/client && cpx \"src/client/.next/**/*.*\" \"dist/server/next\"",
    "build:server": "babel src/server --out-dir dist/server --source-maps",
    "build": "yarn build:client && yarn build:server && yarn copy-deps && yarn install-deps",
    "not-preserve": "yarn build",
    "serve": "cross-env NODE_ENV=production firebase serve --only functions,hosting",
    "not-predeploy": "rimraf dist/ && yarn build",
    "deploy": "cross-env NODE_ENV=production firebase deploy --only functions,hosting",
    "test": "echo 'Running Standard.js and Jasmine unit tests...\n' && yarn lint && yarn unit",
    "fix": "standard --fix",
    "v+": "yarn version --patch",
    "v++": "yarn version --minor",
    "copy-deps": "cpx \"*{package.json,yarn.lock}\" \"dist/server\" && cpx \"src/client/next.config.js\" \"dist/server\"",
    "install-deps": "cd \"dist/server\" && yarn",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" && cpx \"src/client/public/**/*.*\" \"dist/public\"",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "aether-css-framework": "^1.6.17",
    "core-js": "^3.21.1",
    "firebase": "^9.6.8",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.1",
    "next": "12",
    "next-offline": "^5.0.2",
    "patch-package": "^6.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-svg-inline": "^2.1.1",
    "react-toastify": "^8.2.0",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@next/eslint-plugin-next": "^12.1.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-emotion": "^11.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-module-resolver": "1.4.0",
    "eslint-plugin-prefer-arrow-functions": "3.1.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-security-node": "1.1.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^5.25.0"
  },
  "main": "index.js",
  "engines": {
    "node": "16"
  }
}
